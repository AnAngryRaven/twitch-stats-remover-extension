{
  "manifest_version": 3,
  "name": "Twitch Statistics Remover",
  "description": "Removes statistics from twitch.",
  "version": "1.2.0",
  "content_scripts": [
  {
	  "js": ["remover.js"],
	  "matches": [
		"https://www.twitch.tv/*"
	  ]
  }
  ],
  "icons": {
	  "16": "icons/16x.png",
	  "32": "icons/32x.png",
	  "48": "icons/48x.png",
	  "128": "icons/128x.png"
  },
  "action": {
	  "default_popup": "options.html"
  },
  "permissions": ["storage"],
  "browser_specific_settings": {
	  "gecko": {
		  "id": "twitch-stats-remover@guhcat.com"
	  }
  }
}